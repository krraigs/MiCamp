<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/littlelightgrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/settingLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginBottom="4dp"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/lightblack"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="6dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/registerGym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/logOutTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/settingLl"
            android:layout_marginBottom="4dp"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="@color/lightblack"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="6dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/fbTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow us on Facebook"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/instaTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow us on Instagram"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/linkedInTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow us on LinkedIn"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/supportLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@id/shareLl"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Support"
                android:textColor="@color/lightblack"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="6dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tncTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textColor="@color/lightblack"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/pvTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/contactTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:padding="5dp"
                android:textColor="@color/lightblack"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/asFit"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:src="@drawable/app_icon"
            android:layout_below="@id/supportLl"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/versionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 0.0.1"
            android:layout_below="@id/asFit"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@id/logOutTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="19sp"
            android:background="@color/mainappcolor"
            android:layout_below="@id/versionTv"
            android:padding="10dp"
            android:textAlignment="center"/>

    </RelativeLayout>

</ScrollView>