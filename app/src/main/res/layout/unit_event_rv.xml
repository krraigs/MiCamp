<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin = "10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/littlelightgrey"
        android:padding="8dp">

        <TextView
            android:id="@+id/eventDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08 June 2019"
            android:padding="8dp"
            android:textColor="@color/darkpurple"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/eventTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holiday"
            android:background="@drawable/round_corner_button"
            android:backgroundTint="@color/darkpurple"
            android:padding="8dp"
            android:textColor="@color/white"
            android:layout_below="@id/eventDateTv"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/eventDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gandhi Jayanti"
            android:textColor="@color/lightblack"
            android:layout_below="@id/eventDateTv"
            android:layout_toEndOf="@id/eventDateTv"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>