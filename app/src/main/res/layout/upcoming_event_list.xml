<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upcoming_event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="14dp"
    app:cardElevation="4dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <RelativeLayout
            android:id="@+id/up_image_relative"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/up_event_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:id="@+id/up_event_date"
                android:layout_alignBottom="@id/up_event_photo"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/up_event_day"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="11sp"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLines="1"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/up_image_relative">

            <TextView
                android:id="@+id/up_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text="Upcoming name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/up_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/up_event_name"
                android:layout_marginStart="8dp"
                android:text="Upcoming Location" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>