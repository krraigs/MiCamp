<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upcoming_event_card"
    android:layout_width="180dp"
    android:layout_height="130dp"
    android:layout_margin="6dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/up_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Upcoming name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/up_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@id/up_event_name"
            android:fontFamily="@font/poppins"
            android:text="Location"
            android:maxLines="1"
            android:textColor="@color/lightblack" />

        <TextView
            android:id="@+id/up_event_day"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/up_event_location"
            android:textColor="@color/lightblack"
            android:alpha="0.6"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            android:text="12 July" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
